generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  created  DateTime @default(now())
  files    File[]
  folders  Folder[]
}

model File {
  id       Int      @id @default(autoincrement())
  name     String
  size     Int
  created  DateTime @default(now())
  url      String
  ownerId  Int
  folderId Int
  folder   Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  owner    User     @relation(fields: [ownerId], references: [id])

  @@unique([name, folderId, ownerId])
}

model Folder {
  id           Int         @id @default(autoincrement())
  name         String
  ownerId      Int
  parentId     Int?
  created      DateTime    @default(now()) @db.Timestamp(6)
  files        File[]
  owner        User        @relation(fields: [ownerId], references: [id])
  parentFolder Folder?     @relation("Folder Hierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children     Folder[]    @relation("Folder Hierarchy")
  shareLinks   ShareLink[]

  @@unique([ownerId, name])
}

model ShareLink {
  id       String   @id @default(uuid())
  folderId Int
  created  DateTime @default(now())
  expires  DateTime
  folder   Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
}
